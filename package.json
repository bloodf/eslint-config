{
  "name": "@vue-stoerfront/eslint-config-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@7.1.6",
  "license": "MIT",
  "homepage": "https://github.com/vuestorefront/eslint-config",
  "contributors": [
    {
      "name": "Heitor Ramon Ribeiro",
      "email": "heitor.ramon@gmail.com",
      "url": "https://heitor.co"
    }
  ],
  "scripts": {
    "commit": "cz",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "release": "bumpp package.json packages/*/package.json --commit \"feat: release new version \" --push --tag && pnpm -r publish --access public",
    "update:check": "pnpm -r run update:check",
    "update:packages": "pnpm -r run update:packages"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.1",
    "@commitlint/config-conventional": "^17.0.0",
    "@vue-storefront/eslint-config-base": "*",
    "bumpp": "^7.1.1",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.2",
    "npm-check-updates": "^13.0.3",
    "prettier": "^2.6.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "exec < /dev/tty && npx commitlint --edit $1 || true",
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
